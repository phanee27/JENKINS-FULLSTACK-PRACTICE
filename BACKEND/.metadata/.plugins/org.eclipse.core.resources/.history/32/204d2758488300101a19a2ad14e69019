package com.klef.library.service;

import java.util.List;
import java.util.Optional;

import org.springframework.stereotype.Service;

import com.klef.library.entity.libraryEntity;
import com.klef.library.repository.LibraryRepository;

@Service
public class libraryServiceImpl implements libraryService{
	private LibraryRepository libraryrepository;

	@Override
	public libraryEntity addBook(libraryEntity book) {
		return libraryrepository.save(book);
	}

	@Override
	public List<libraryEntity> getAllBooks() {
		return libraryrepository.findAll();
	}

